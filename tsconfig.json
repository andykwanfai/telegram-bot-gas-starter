{
  "compilerOptions": {
    "types": [
      "google-apps-script",
      "node",
      "@types/jest",
    ],
    "module": "ES2022",
    "moduleResolution": "node",
    "strict": true,
    "target": "es2022",
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2021",
      "DOM"
    ]
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}